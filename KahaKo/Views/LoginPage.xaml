<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KahaKo.Views.LoginPage"
             Title="Login"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="24,40,24,24"
                            Spacing="0"
                            VerticalOptions="Center">

            <!-- Login Card -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="70"
                    MaximumWidthRequest="400"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">

                <Border.Shadow>
                    <Shadow Brush="Black" 
                            Opacity="0.1" 
                            Radius="20" 
                            Offset="0,4"/>
                </Border.Shadow>

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="24">

                    <!-- Logo/Icon -->
                    <Border BackgroundColor="#512BD4"
                            WidthRequest="80"
                            HeightRequest="80"
                            HorizontalOptions="Center"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="40"/>
                        </Border.StrokeShape>
                        <Label Text="ðŸ’³"
                               FontSize="40"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- Title -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Welcome Back"
                               FontSize="28"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1A1A1A"/>
                        <Label Text="Sign in to continue"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#666666"/>
                    </VerticalStackLayout>

                    <!-- Form -->
                    <VerticalStackLayout Spacing="16">

                        <!-- Username -->
                        <Border BackgroundColor="#F8F8F8"
                                StrokeThickness="1"
                                Stroke="#E0E0E0"
                                Padding="16,12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Entry Placeholder="Username"
                                   Text="{Binding Username}"
                                   FontSize="20"
                                   BackgroundColor="Transparent"
                                   PlaceholderColor="#999999"
                                   TextColor="#1A1A1A"/>
                        </Border>

                        <!-- Password -->
                        <Border BackgroundColor="#F8F8F8"
                                StrokeThickness="1"
                                Stroke="#E0E0E0"
                                Padding="16,12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Entry Placeholder="Password"
                                   Text="{Binding Password}"
                                   IsPassword="True"
                                   FontSize="16"
                                   BackgroundColor="Transparent"
                                   PlaceholderColor="#999999"
                                   TextColor="#1A1A1A"/>
                        </Border>

                        <!-- Error Message -->
                        <Border BackgroundColor="#FFEBEE"
                                Padding="12"
                                IsVisible="{Binding HasError}"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="{Binding ErrorMessage}"
                                   TextColor="#C62828"
                                   FontSize="14"/>
                        </Border>

                        <!-- Login Button -->
                        <Button Text="Sign In"
                                Command="{Binding LoginCommand}"
                                BackgroundColor="#512BD4"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                HeightRequest="56"
                                CornerRadius="12"
                                Margin="0,8,0,0"/>

                    </VerticalStackLayout>

                    <!-- Footer -->
                    <Label Text="KahaKo POS v1.0"
                           FontSize="12"
                           TextColor="#999999"
                           HorizontalOptions="Center"
                           Margin="0,8,0,0"/>

                </VerticalStackLayout>

            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>