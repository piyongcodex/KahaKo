<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KahaKo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KahaKo.Views"
    Title="KahaKo.AppShell">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="MainPage" />

    <TabBar Route="MainTabs">


        <Tab Title="Sales" Icon="cart.png">
            <ShellContent ContentTemplate="{DataTemplate views:SalesPage}"/>
        </Tab>

        <Tab Title="Products" Icon="box.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProductManagementPage}"/>
        </Tab>

        <Tab Title="Reports" Icon="chart.png">
            <ShellContent ContentTemplate="{DataTemplate views:ReportsPage}"/>
        </Tab>

        <Tab Title="Users" Icon="people.png">
            <ShellContent ContentTemplate="{DataTemplate views:UserManagementPage}"/>
        </Tab>

    </TabBar>

</Shell>
