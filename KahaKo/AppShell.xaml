<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KahaKo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:KahaKo.Views"
    Title="KahaKo.AppShell">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <TabBar Route="MainTabs">

        <Tab Title="Sales">
            <ShellContent ContentTemplate="{DataTemplate views:SalesPage}"/>
        </Tab>

        <Tab Title="Products">
            <ShellContent ContentTemplate="{DataTemplate views:ProductManagementPage}"/>
        </Tab>

        <Tab Title="Dashboard">
            <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}"/>
        </Tab>

    </TabBar>

</Shell>
